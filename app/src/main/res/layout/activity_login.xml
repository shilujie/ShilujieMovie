<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    android:orientation="vertical"
    tools:context=".view.activity.LoginActivity">
    <EditText
        android:id="@+id/ed_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="520dp"
        android:background="@drawable/edtext_layer"
        android:hint="请输入邮箱账号" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/wang"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:background="@drawable/edtext_right"
            android:text="忘记密码"
            android:backgroundTint="#fff"
            android:layout_height="50dp" />
        <EditText
            android:id="@+id/ed_pass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toLeftOf="@+id/wang"
            android:background="@drawable/edtext_left"
            android:hint="  请输入密码" />
        <TextView
            android:id="@+id/zhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:layout_below="@+id/wang"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:text="暂无账号，立即注册"/>
    </RelativeLayout>
    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonlogin_shape"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#fff"
        android:text="登陆"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="15dp"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="25dp"
        android:text="---------或---------"/>
    <Button
        android:id="@+id/we"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonloginwx_shape"
        android:layout_marginHorizontal="50dp"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#fff"
        android:text="微信"/>
</LinearLayout>