<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login"
    tools:context=".view.activity.ZhuActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#fff"
            android:textSize="25dp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="注册"/>
        <ImageView
            android:id="@+id/backs"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/back"/>
    </RelativeLayout>
    <EditText
        android:id="@+id/zed_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edtext_layer"
        android:layout_marginTop="500dp"
        android:hint="请输入昵称"
        android:layout_marginHorizontal="50dp"/>
    <EditText
        android:id="@+id/zed_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edtext_layer"
        android:layout_marginTop="10dp"
        android:hint="请输入邮箱账号"
        android:layout_marginHorizontal="50dp"/>
    <EditText
        android:id="@+id/zed_pass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edtext_layer"
        android:layout_marginTop="10dp"
        android:hint="设置密码"
        android:layout_marginHorizontal="50dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/huoqu"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:background="@drawable/edtext_right"
            android:text="获取验证码"
            android:backgroundTint="#fff"
            android:layout_height="50dp" />
        <EditText
            android:id="@+id/zed_huoqu"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toLeftOf="@+id/wang"
            android:background="@drawable/edtext_left"
            android:hint="  请输入验证码" />
        <TextView
        android:id="@+id/tv_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:layout_below="@+id/huoqu"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:text="已有账号，立即登陆"/>
    </RelativeLayout>
    <Button
        android:id="@+id/zhuce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonlogin_shape"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#fff"
        android:text="注册"/>

</LinearLayout>